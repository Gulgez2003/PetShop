@{
    ViewData["Title"] = "Update";
}

@model ServiceUpdateDTO

<section class="pcoded-main-container">
    <div class="pcoded-content">
        <!-- [ form-element ] start -->
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h5>Update Service</h5>
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <form method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="@Model.serviceGetDTO.Id" />
                                <div class="form-group">
                                    <label asp-for="@Model.servicePostDTO.Name"></label>
                                    <input class="form-control" asp-for="@Model.servicePostDTO.Name" placeholder="Name" value="@Model.serviceGetDTO.Name">
                                    <span asp-validation-for="@Model.servicePostDTO.Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.servicePostDTO.Description"></label>
                                    <input class="form-control" asp-for="@Model.servicePostDTO.Description" placeholder="Description" value="@Model.serviceGetDTO.Description">
                                    <span asp-validation-for="@Model.servicePostDTO.Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.servicePostDTO.Icon"></label>
                                    <input class="form-control" asp-for="@Model.servicePostDTO.Icon" placeholder="Icon" value="@Model.serviceGetDTO.Icon">
                                    <span asp-validation-for="@Model.servicePostDTO.Icon" class="text-danger"></span>
                                </div>

                                <div style="margin-top: 20px">
                                    <button type="submit" class="btn  btn-primary ">Submit</button>
                                    <button asp-controller="Service" asp-action="Index" class="btn btn-light">Back to List</button>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ form-element ] end -->
</section>



