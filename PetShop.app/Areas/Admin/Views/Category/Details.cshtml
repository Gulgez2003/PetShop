@{
    ViewData["Title"] = "Delete";
}

@model CategoryGetDTO

<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="conatiner-fluid content-inner mt-5 py-0">
            <div>
                <h1>Details</h1>

                <div>
                    <h4>Category</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Id:
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Id
                        </dd>
                        <dt class="col-sm-2">
                            Name:
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Name
                        </dd>
                        <dt class="col-sm-2">
                            Animals:
                        </dt>
                        <dd class="col-sm-10">
                            <ul>
                                @foreach (var item in Model.Animals)
                                {
                                    <li>@item.Name</li>
                                }
                            </ul>
                        </dd>
                        <dt class="col-sm-2">
                            Sub-categories:
                        </dt>
                        <dd class="col-sm-10">
                            <ul>
                                @foreach (var item in Model.SubCategories)
                                {
                                    <li>@item.Name</li>
                                }
                            </ul>
                        </dd>
                    </dl>

                    <form>
                        <a class="btn btn-primary" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>