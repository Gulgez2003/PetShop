@{
    ViewData["Title"] = "Delete";
}

@model ProductGetDTO

<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="conatiner-fluid content-inner mt-5 py-0">
            <div>
                <h1>Details</h1>

                <div>
                    <h4>Product</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Id:
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Id
                        </dd>
                        <dt class="col-sm-2">
                            Image:
                        </dt>
                        <dd class="col-sm-10">
                            <td><img src="~/assets/img/@Model.ImageName" alt="user image" class="img-radius wid-40 align-top m-r-15"></td>
                        </dd>
                        <dt class="col-sm-2">
                            Name:
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Name
                        </dd>
                        <dt class="col-sm-2">
                            Title:
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Title
                        </dd>
                        <dt class="col-sm-2">
                            Description:
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Description
                        </dd>
                        <dt class="col-sm-2">
                            Price:
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Price
                        </dd>
                        <dt class="col-sm-2">
                            Sub-category:
                        </dt>
                        <dd class="col-sm-10">
                            @Model.SubCategory.Name
                        </dd>
                    </dl>

                    <form>
                        <a class="btn btn-primary" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>