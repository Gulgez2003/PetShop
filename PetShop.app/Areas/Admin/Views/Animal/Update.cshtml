@{
    ViewData["Title"] = "Update";
}

@model AnimalUpdateDTO

<section class="pcoded-main-container">
    <div class="pcoded-content">
        <!-- [ form-element ] start -->
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h5>Update Animal</h5>
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <form method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="@Model.animalGetDTO.Id" />
                                <div class="form-group">
                                    <label asp-for="@Model.animalPostDTO.Name">Animal Name</label>
                                    <input class="form-control" asp-for="@Model.animalPostDTO.Name" placeholder="Name" value="@Model.animalGetDTO.Name">
                                    <span asp-validation-for="@Model.animalPostDTO.Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Select Categories</label><br />
                                    @foreach (var item in ViewBag.Categories)
                                    {
                                        <input type="checkbox" name="animalPostDTO.SelectedCategories" value="@item.Id"
                                           @(Model.animalGetDTO.Categories.Any(c => c.Id == item.Id) ? "checked=\"checked\"" : "") />
                                        @item.Name <br />
                                    }
                                </div>
                                <div>
                                    <label class="form-label">Upload File</label>
                                    <input type="file" class="form-control" accept="image/*" asp-for="@Model.animalPostDTO.File" value="@Model.animalGetDTO.ImageName">
                                    <span asp-validation-for="@Model.animalPostDTO.File" class="text-danger"></span>
                                </div>
                                <div style="margin-top: 20px">
                                    <button type="submit" class="btn  btn-primary ">Submit</button>
                                    <button asp-controller="Animal" asp-action="Index" class="btn btn-light">Back to List</button>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ form-element ] end -->
</section>



