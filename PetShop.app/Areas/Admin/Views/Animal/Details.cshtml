@{
    ViewData["Title"] = "Delete";
}

@model AnimalGetDTO

<section class="pcoded-main-container">
    <div class="pcoded-content">
        <div class="conatiner-fluid content-inner mt-5 py-0">
            <div>
                <h1>Details</h1>

                <div>
                    <h4>Animal</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Id:
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Id
                        </dd>
                        <dt class="col-sm-2">
                            Image:
                        </dt>
                        <dd class="col-sm-10">
                            <td><img src="~/assets/img/@Model.ImageName" alt="user image" class="img-radius wid-40 align-top m-r-15"></td>
                        </dd>
                        <dt class="col-sm-2">
                            Name:
                        </dt>
                        <dd class="col-sm-10">
                            @Model.Name
                        </dd>
                        <dt class="col-sm-2">
                            Categories:
                        </dt>
                        <dd class="col-sm-10">
                            <ul>
                                @foreach (var item in Model.Categories)
                                {
                                    <li>@item.Name</li>
                                }
                            </ul>
                        </dd>
                    </dl>

                    <form>
                        <a class="btn btn-primary" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>