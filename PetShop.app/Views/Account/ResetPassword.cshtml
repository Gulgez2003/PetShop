@model ResetPasswordDto
@{
    ViewData["Title"] = "Reset Password";
}
<div class="container">
    <section style="background-color: #7AB730;">
        <div class="container py-5">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <h3 class="mb-5">Reset password</h3>
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                                <div class="form-outline mb-4">
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                    <input type="password" asp-for="@Model.Password" class="form-control form-control-lg" />
                                    <label class="form-label" for="typeEmailX-2">New Password</label>
                                </div>
                                <input type="email" hidden asp-for="@Model.Email" class="form-control form-control-lg" />
                                <input type="text" hidden asp-for="@Model.Token" class="form-control form-control-lg" />
                                <button class="btn btn-primary btn-lg btn-block" type="submit">Reset Password</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
